<div class="container m-auto">
 
    <h2 id="title" class="py-3 font-bold text-2xl">Search </h2>
    <div class="w-full h-64 bg-gray-100 " >
        <PowerSelect @options={{this.options}} @onChange={{this.changeCat}} @selected={{this.category}} as |name|>
            {{name}}
        </PowerSelect>
    </div>

    <table class="w-full my-4">

        <thead class="border text-left">
            <tr>
                <th>Book name</th>
                <th>ISBN</th>
                <th>Author</th>
            </tr>
        </thead>
        <tbody class="border">

            {{#each @model as |book|}}
            <tr>
                <td>{{book.headline}}</td>
                <td>{{book.isbn}}</td>
                <td>{{book.author.familyname}}</td>
            </tr>
            {{/each}}
 
   
        </tbody>
    </table>

        <table class="w-full my-4">

        <thead class="border text-left">
            <tr>
                <th>Authors</th>
            </tr>
        </thead>
        <tbody class="border">

            {{#each @model as |book|}}
            <tr>
                <td>{{book.familyname}}</td>
            </tr>
            {{/each}}
 
   
        </tbody>
    </table>
</div>